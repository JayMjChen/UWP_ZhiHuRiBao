<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brook.ZhiHuRiBao.Elements"
    xmlns:model="using:Brook.ZhiHuRiBao.Models">

    <DataTemplate x:Key="Comment">
        <RelativePanel BorderBrush="{ThemeResource BrushCommentSplitter}" BorderThickness="0, 0, 0, 1" Padding="0, 4, 0, 4">
            <Ellipse x:Name="Comment_Avatar" Width="36" Height="36" Margin="4, 4, 2, 0">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding avatar}" Stretch="Fill"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="Comment_Author" Margin="5" Text="{Binding author}" FontWeight="SemiBold" FontSize="14" RelativePanel.RightOf="Comment_Avatar" RelativePanel.AlignVerticalCenterWith="Comment_Avatar"/>
            <TextBlock x:Name="Comment_Content" Margin="5" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding content}" RelativePanel.RightOf="Comment_Avatar" RelativePanel.Below="Comment_Avatar" LineHeight="20" FontSize="14"/>
        </RelativePanel>
    </DataTemplate>

    <DataTemplate x:Key="CommentHeader">
        <Border>
            <TextBlock Margin="4" Text="{Binding GroupName}" FontSize="12"/>
        </Border>
    </DataTemplate>

</ResourceDictionary>
