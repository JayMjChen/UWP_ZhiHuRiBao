<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brook.ZhiHuRiBao.Elements"
    xmlns:xp="using:XP">

    <DataTemplate x:Key="Story">
        <xp:Shadow Z_Depth="1" CornerRadius="5">
            <RelativePanel Background="White" CornerRadius="5">
                <Image x:Name="MainItem_Image" Stretch="Fill" Width="70" Height="70" Margin="8"
                       RelativePanel.AlignVerticalCenterWithPanel="True">
                    <Image.Source>
                        <BitmapImage UriSource="{Binding images[0]}"/>
                    </Image.Source>
                </Image>
                <TextBlock x:Name="MainItem_Content" Margin="8" TextWrapping="Wrap" Text="{Binding title}"
                           RelativePanel.RightOf="MainItem_Image" FontWeight="Medium" />
            </RelativePanel>
        </xp:Shadow>
    </DataTemplate>
</ResourceDictionary>
