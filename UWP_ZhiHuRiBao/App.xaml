<Application
    x:Class="Brook.ZhiHuRiBao.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_ZhiHuRiBao"
    RequestedTheme="Light"
    xmlns:ui="using:Windows.UI"
    xmlns:media="using:Windows.UI.Xaml.Media">
    <Application.Resources>
        <ui:Color x:Key="ColorPrimary">#03a9f4</ui:Color>
        <ui:Color x:Key="ColorPrimaryDark">#0288d1</ui:Color>

        <media:SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}"/>
        <media:SolidColorBrush x:Key="BrushPrimaryDark" Color="{StaticResource ColorPrimaryDark}"/>
    </Application.Resources>
</Application>
